<ul>
  <%= render @posts %>
</ul>

<% unless @previous_page.zero? %>
  <%= link_to "Previous", posts_path(page_size: @page_size, page: @previous_page) %>
<% end %>
<% unless Post.no_next(@next_page, @page_size) %>
  <%= link_to "Next", posts_path(page_size: @page_size, page: @next_page) %>
<% end %>
